# program.py
 
def add(a, b):
    return a + b
 
def subtract(a, b):
    return a - b
 
And here's the corresponding test file:
 
# test_program.py
import pytest
from program import add, subtract
 
def test_add():
    assert add(2, 3) == 5
    assert add(-1, 1) == 0
 
def test_subtract():
    assert subtract(5, 3) == 2
    assert subtract(10, 5) == 5
 
if __name__ == "__main__":
    pytest.main()
